					contactMessagePlaceholder: 'Escribe tu mensaje',
					contactSubmit: 'Enviar mensaje',
					footerText: 'Copyright 2026 Retired at 33. Todos los derechos reservados.',
				},
			};

			const languageButtons = document.querySelectorAll('[data-lang]');
			const i18nElements = document.querySelectorAll('[data-i18n]');
			const placeholderElements = document.querySelectorAll('[data-i18n-placeholder]');
			let currentLanguage = localStorage.getItem('language') || 'en';

			const setLanguage = (lang) => {
				currentLanguage = translations[lang] ? lang : 'en';
				const dictionary = translations[currentLanguage];
				i18nElements.forEach((element) => {
					const key = element.getAttribute('data-i18n');
					if (key && dictionary[key]) {
						element.textContent = dictionary[key];
					}
				});
				placeholderElements.forEach((element) => {
					const key = element.getAttribute('data-i18n-placeholder');
					if (key && dictionary[key]) {
						element.setAttribute('placeholder', dictionary[key]);
					}
				});
				document.documentElement.lang = currentLanguage;
				languageButtons.forEach((button) => {
					button.classList.toggle('language-button--active', button.dataset.lang === currentLanguage);
				});
				localStorage.setItem('language', currentLanguage);
			};

			languageButtons.forEach((button) => {
				button.addEventListener('click', () => setLanguage(button.dataset.lang));
			});

			setLanguage(currentLanguage);
		</script>

		<style>
			.page {
				display: flex;
				flex-direction: column;
				gap: 2.5rem;
			}

			.language-toggle {
				position: fixed;
				top: 1.5rem;
				right: 1.5rem;
				display: flex;
				gap: 0.65rem;
				padding: 0.35rem;
				background: rgba(255, 255, 255, 0.9);
				border: 1px solid rgb(var(--black));
				z-index: 10;
			}

			.language-button {
				background: transparent;
				border: 1px solid rgb(var(--black));
				color: rgb(var(--black));
				font-family: inherit;
				font-size: 0.6rem;
				letter-spacing: 0.25em;
				text-transform: uppercase;
				padding: 0.45rem 0.8rem;
				cursor: pointer;
			}

			.language-button--active {
				background: rgb(var(--black));
				color: rgb(var(--white));
			}

			.hero {
				text-align: center;
				margin-top: 2.5rem;
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}

			.hero-kicker {
				text-transform: uppercase;
				letter-spacing: 0.45em;
				font-size: 0.7rem;
				font-weight: 600;
				margin: 0;
			}

			.hero-title {
				font-size: clamp(2.8rem, 5vw, 5rem);
				font-weight: 700;
				margin: 0;
			}

			.hero-subtitle {
				font-size: clamp(1rem, 1.8vw, 1.2rem);
				font-weight: 300;
				max-width: 720px;
				margin: 0 auto;
				color: rgb(var(--gray-dark));
			}

			.primary-nav {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 2.5rem;
				flex-wrap: wrap;
				padding: 1.2rem 0;
				border-top: 1px solid rgb(var(--black));
				border-bottom: 1px solid rgb(var(--black));
				text-transform: uppercase;
				letter-spacing: 0.12em;
				font-size: clamp(1.1rem, 2.2vw, 2.2rem);
				font-weight: 600;
				line-height: 1.1;
				white-space: nowrap;
			}

			.primary-nav a {
				position: relative;
				padding: 0.2rem 0;
			}

			.primary-nav a::after {
				content: '';
				position: absolute;
				left: 0;
				bottom: -0.4rem;
				height: 1px;
				width: 100%;
				background: rgb(var(--black));
				transform: scaleX(0);
				transform-origin: right;
				transition: transform 0.3s ease;
			}

			.primary-nav a:hover::after,
			.primary-nav a:focus-visible::after {
				transform: scaleX(1);
				transform-origin: left;
			}


			.feature-video {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}

			.video-frame {
				position: relative;
				border: 1px solid rgb(var(--black));
				overflow: hidden;
				background: rgb(var(--black));
				width: min(980px, 100%);
				margin: 0 auto;
			}

			.hero-media {
				width: 100%;
				height: min(72vh, 640px);
				object-fit: cover;
				object-position: center top;
				display: block;
			}

			.video-caption {
				font-size: 0.95rem;
				font-weight: 400;
				margin: 0;
				color: rgb(var(--gray-dark));
				text-align: center;
			}

			.section {
				--section-bg: rgb(var(--white));
				--section-fg: rgb(var(--black));
				--section-border: rgba(0, 0, 0, 0.15);
				background: var(--section-bg);
				color: var(--section-fg);
				width: 100vw;
				margin-left: calc(50% - 50vw);
				margin-right: calc(50% - 50vw);
				padding: 6.5rem 0;
				border-top: 1px solid var(--section-border);
				scroll-margin-top: 2.5rem;
			}

			.section--dark {
				--section-bg: rgb(var(--black));
				--section-fg: rgb(var(--white));
				--section-border: rgba(255, 255, 255, 0.2);
			}

			.section-inner {
				width: min(1200px, 100% - 3rem);
				margin: 0 auto;
				display: grid;
				grid-template-columns: minmax(0, 1fr) minmax(0, 1.2fr);
				gap: 3.75rem;
				align-items: start;
			}

			.section--reverse .section-header {
				order: 2;
				text-align: right;
			}

			.section--reverse .section-body {
				order: 1;
			}

			.section a {
				color: inherit;
			}

			.section h2,
			.section h3,
			.section h4,
			.section h5,
			.section h6 {
				color: inherit;
			}

			.section-kicker {
				text-transform: uppercase;
				letter-spacing: 0.3em;
				font-size: 0.7rem;
				font-weight: 600;
				margin: 0;
				opacity: 0.7;
			}

			.section-body {
				display: flex;
				flex-direction: column;
				gap: 2rem;
			}

			.section-body p {
				margin: 0;
			}

			.section-list {
				list-style: none;
				padding: 0;
				margin: 0;
				display: grid;
				gap: 1.2rem;
			}

			.section-list li {
				padding-top: 0.85rem;
				border-top: 1px solid var(--section-border);
				font-weight: 500;
			}

			.section-link {
				align-self: flex-start;
				text-transform: uppercase;
				letter-spacing: 0.25em;
				font-size: 0.72rem;
				font-weight: 600;
				padding-bottom: 0.4rem;
				border-bottom: 1px solid currentColor;
			}

			.contact-form {
				display: grid;
				gap: 1.5rem;
			}

			.form-label {
				display: grid;
				gap: 0.6rem;
				font-weight: 500;
			}

			.form-label span {
				text-transform: uppercase;
				letter-spacing: 0.25em;
				font-size: 0.65rem;
			}

			.form-label input,
			.form-label textarea {
				width: 100%;
				background: transparent;
				border: 1px solid currentColor;
				color: inherit;
				font-family: inherit;
				padding: 0.85rem 1rem;
			}

			.form-label input::placeholder,
			.form-label textarea::placeholder {
				color: inherit;
				opacity: 0.6;
			}

			.form-button {
				align-self: flex-start;
				background: transparent;
				border: 1px solid currentColor;
				color: inherit;
				font-family: inherit;
				text-transform: uppercase;
				letter-spacing: 0.25em;
				font-size: 0.7rem;
				font-weight: 600;
				padding: 0.9rem 1.7rem;
				cursor: pointer;
			}

			.form-button:hover,
			.form-button:focus-visible {
				background: currentColor;
				color: var(--section-bg);
			}

			.site-footer {
				padding: 3rem 0 1rem;
				text-align: center;
				font-size: 0.7rem;
				letter-spacing: 0.3em;
				text-transform: uppercase;
				font-weight: 600;
			}

			@media (max-width: 900px) {
				.section-inner {
					grid-template-columns: 1fr;
				}

				.section--reverse .section-header {
					order: 1;
					text-align: left;
				}

				.section--reverse .section-body {
					order: 2;
				}
			}

			@media (max-width: 600px) {
				.primary-nav {
					gap: 1.5rem;
					letter-spacing: 0.18em;
				}

				.language-toggle {
